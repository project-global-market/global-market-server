generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  email      String?   @unique
  username   String
  verified   Boolean?
  from       String
  hash       String
  hashedRt   String?
  role       RoleValue @default(User)

  @@map("users")
}

enum RoleValue {
  SuperAdmin
  Admin
  Moderator
  User
}
